{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "Azure Blob Storage",
      "description": "API for Azure Blob Storage operations using SAS authentication"
    },
    "host": "https://ncatsk2.blob.core.windows.net",
    "schemes": [
      "https"
    ],
    "paths": {
      "/{container}/{blob}": {
        "put": {
          "summary": "Upload a blob",
          "description": "Uploads a new blob or replaces an existing blob using SAS authentication",
          "parameters": [
            {
              "name": "container",
              "in": "path",
              "required": true,
              "type": "string",
              "description": "The name of the container"
            },
            {
              "name": "blob",
              "in": "path",
              "required": true,
              "type": "string",
              "description": "The name of the blob"
            },
            {
              "name": "sas_token",
              "in": "query",
              "required": true,
              "type": "string",
              "description": "The SAS token"
            },
            {
              "name": "x-ms-blob-type",
              "in": "header",
              "required": true,
              "type": "string",
              "description": "The type of blob. Must be set to BlockBlob, PageBlob, or AppendBlob."
            },
            {
              "name": "Content-Length",
              "in": "header",
              "required": true,
              "type": "integer",
              "description": "The length of the request body in bytes."
            },
            {
              "name": "body",
              "in": "body",
              "required": true,
              "schema": {
                "type": "string",
                "format": "binary"
              },
              "description": "The content of the blob"
            }
          ],
          "responses": {
            "201": {
              "description": "Created"
            },
            "400": {
              "description": "Bad Request"
            },
            "403": {
              "description": "Forbidden"
            },
            "404": {
              "description": "Not Found"
            }
          }
        }
      }
    }
  }
